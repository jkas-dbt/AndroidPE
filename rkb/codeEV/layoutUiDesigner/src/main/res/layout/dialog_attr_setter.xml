<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="center"
		android:orientation="horizontal"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginTop="6dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_margin="4dp"
			android:orientation="vertical"
			android:layout_weight="1.0">

			<HorizontalScrollView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:padding="1dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textSize="16sp"
					android:typeface="monospace"
					android:text="ViewName"
					android:textStyle="bold"
					android:id="@+id/tvTitle"/>

			</HorizontalScrollView>

			<HorizontalScrollView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textSize="10sp"
					android:typeface="monospace"
					android:text="View package"
					android:id="@+id/tvSubTitle"/>

			</HorizontalScrollView>

		</LinearLayout>

		<ImageView
			android:layout_height="35dp"
			android:layout_width="35dp"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_visibility"
			android:padding="8dp"
			android:layout_margin="4dp"
			android:id="@+id/icVisibility"/>

		<ImageView
			android:layout_height="35dp"
			android:layout_width="35dp"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_add"
			android:padding="8dp"
			android:layout_margin="4dp"
			android:id="@+id/icAdd"/>

		<ImageView
			android:layout_height="35dp"
			android:layout_width="35dp"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_delete"
			android:padding="8dp"
			android:layout_margin="4dp"
			android:id="@+id/icDelete"/>

	</LinearLayout>

	<jkas.androidpe.layoutUiDesigner.palette.MainView
		android:layout_height="160dp"
		android:layout_width="match_parent"
		android:visibility="gone"
		android:layout_margin="8dp"
		android:padding="0dp"
		android:id="@+id/relTemplate"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="center"
		android:padding="4dp"
		android:orientation="horizontal"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:padding="8dp"
			android:layout_margin="2dp"
			android:textSize="10sp"
			android:text="Previous"
			android:id="@+id/tvPrivious"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:padding="8dp"
			android:layout_margin="2dp"
			android:textSize="10sp"
			android:text="Next"
			android:id="@+id/tvNext"/>

		<View
			android:layout_height="1dp"
			android:layout_width="match_parent"
			android:padding="8dp"
			android:layout_weight="1.0"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:padding="8dp"
			android:layout_margin="2dp"
			android:textSize="10sp"
			android:text="First child"
			android:id="@+id/tvFirstChild"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:padding="8dp"
			android:layout_margin="2dp"
			android:textSize="10sp"
			android:text="Parent"
			android:id="@+id/tvParent"/>

		<View
			android:layout_height="1dp"
			android:layout_width="match_parent"
			android:padding="8dp"
			android:layout_weight="1.0"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:padding="8dp"
			android:layout_margin="2dp"
			android:textSize="10sp"
			android:typeface="monospace"
			android:text="Copy"
			android:id="@+id/tvCopy"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:padding="8dp"
			android:layout_margin="2dp"
			android:textSize="10sp"
			android:typeface="monospace"
			android:text="Past"
			android:id="@+id/tvPast"/>

	</LinearLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:hint="android:id"
		android:layout_margin="12dp"
		android:id="@+id/tilId">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:padding="12dp"
			android:textSize="12sp"
			android:id="@+id/editId"/>

	</com.google.android.material.textfield.TextInputLayout>

	<androidx.core.widget.NestedScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:padding="4dp"
			android:orientation="vertical">

			<com.google.android.material.card.MaterialCardView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:layout_margin="8dp"
				style="?attr/materialCardViewElevatedStyle">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:padding="4dp"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:gravity="center"
						android:padding="6dp"
						android:orientation="horizontal"
						android:id="@+id/linIcLayout">

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							android:padding="4dp"
							android:textSize="12sp"
							android:typeface="monospace"
							android:layout_weight="1.0"
							android:text="Layout"
							android:textStyle="bold"/>

						<ImageView
							android:layout_height="25dp"
							android:layout_width="30dp"
							android:src="@drawable/ic_chevron_down"
							android:adjustViewBounds="true"
							android:id="@+id/icLayout"/>

					</LinearLayout>

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:padding="8dp"
						android:orientation="vertical"
						android:id="@+id/linLayout">

						<ir.programmerplus.groupbox.GroupBoxLayout
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							app:labelTextColor="?colorOnSurface"
							app:labelTextSize="10dp"
							app:borderColor="?colorOnSurface"
							app:borderCornerRadius="8dp"
							app:borderStrokeWidth="0.7dp"
							android:layoutDirection="ltr"
							app:labelText="LayoutParams">

							<LinearLayout
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:padding="4dp"
								android:orientation="horizontal">

								<com.google.android.material.button.MaterialButton
									android:layout_height="35dp"
									android:layout_width="wrap_content"
									android:padding="8dp"
									android:layout_margin="4dp"
									android:textSize="8dp"
									android:textStyle="bold"
									android:id="@+id/btnWidth"
									android:text="width"/>

								<com.google.android.material.button.MaterialButton
									android:layout_height="35dp"
									android:layout_width="wrap_content"
									android:padding="8dp"
									android:layout_margin="4dp"
									android:textSize="8dp"
									android:textStyle="bold"
									android:id="@+id/btnHeight"
									android:text="height"/>

								<com.google.android.material.button.MaterialButton
									android:layout_height="35dp"
									android:layout_width="wrap_content"
									android:padding="8dp"
									android:layout_margin="4dp"
									android:textSize="8dp"
									android:textStyle="bold"
									android:id="@+id/btnWeight"
									android:text="weight"/>

							</LinearLayout>

						</ir.programmerplus.groupbox.GroupBoxLayout>

						<ir.programmerplus.groupbox.GroupBoxLayout
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							app:labelTextColor="?colorOnSurface"
							app:labelTextSize="10dp"
							app:borderColor="?colorOnSurface"
							android:layout_marginTop="12dp"
							app:borderCornerRadius="8dp"
							app:borderStrokeWidth="0.7dp"
							android:layoutDirection="ltr"
							app:labelText="Attachments between views">

							<LinearLayout
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:padding="8dp"
								android:orientation="vertical">

								<com.google.android.material.button.MaterialButton
									android:layout_height="45dp"
									android:layout_width="match_parent"
									android:padding="4dp"
									android:layout_margin="4dp"
									android:textSize="8dp"
									style="?attr/materialButtonOutlinedStyle"
									android:text="RelativeLayout"
									android:id="@+id/btnRelativeLayout"/>

								<com.google.android.material.button.MaterialButton
									android:layout_height="45dp"
									android:layout_width="match_parent"
									android:padding="4dp"
									android:layout_margin="4dp"
									android:textSize="8dp"
									style="?attr/materialButtonOutlinedStyle"
									android:text="ConstraintLayout"
									android:id="@+id/btnConstraintLayout"/>

								<com.google.android.material.button.MaterialButton
									android:layout_height="45dp"
									android:layout_width="match_parent"
									android:padding="4dp"
									android:layout_margin="4dp"
									android:textSize="8dp"
									style="?attr/materialButtonOutlinedStyle"
									android:text="CoordinatorLayout"
									android:id="@+id/btnCoordinatorLayout"/>

							</LinearLayout>

						</ir.programmerplus.groupbox.GroupBoxLayout>

					</LinearLayout>

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:layout_margin="8dp"
				style="?attr/materialCardViewElevatedStyle">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:padding="4dp"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:gravity="center"
						android:padding="6dp"
						android:orientation="horizontal"
						android:id="@+id/linIcCommonAttr">

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:padding="4dp"
							android:textSize="12sp"
							android:typeface="monospace"
							android:layout_weight="1.0"
							android:text="@string/common_attributes"
							android:textStyle="bold"/>

						<ImageView
							android:layout_height="25dp"
							android:layout_width="30dp"
							android:src="@drawable/ic_chevron_down"
							android:adjustViewBounds="true"
							android:id="@+id/icCommonAttr"/>

					</LinearLayout>

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:padding="8dp"
						android:orientation="vertical"
						android:id="@+id/linCommonAttributes">

						<ir.programmerplus.groupbox.GroupBoxLayout
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							app:labelTextColor="?colorOnSurface"
							android:padding="4dp"
							app:labelTextSize="10dp"
							app:borderColor="?colorOnSurface"
							app:borderCornerRadius="8dp"
							app:borderStrokeWidth="0.7dp"
							android:layoutDirection="ltr"
							app:labelText="android:(layout_margin | padding)">

							<LinearLayout
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:padding="4dp"
								android:orientation="horizontal">

								<com.google.android.material.textfield.TextInputLayout
									android:layout_height="wrap_content"
									android:layout_width="match_parent"
									android:hint="Margins (...)"
									android:layout_margin="4dp"
									android:layout_weight="1.0"
									android:id="@+id/tilMargins">

									<com.google.android.material.textfield.TextInputEditText
										android:layout_height="wrap_content"
										android:layout_width="match_parent"
										android:padding="12dp"
										android:textSize="12sp"
										android:enabled="false"
										android:id="@+id/tieMargins"
										android:text="not yet"/>

								</com.google.android.material.textfield.TextInputLayout>

								<com.google.android.material.textfield.TextInputLayout
									android:layout_height="wrap_content"
									android:layout_width="match_parent"
									android:hint="Paddings (...)"
									android:layout_margin="4dp"
									android:layout_weight="1.0"
									android:id="@+id/tilPaddins">

									<com.google.android.material.textfield.TextInputEditText
										android:layout_height="wrap_content"
										android:layout_width="match_parent"
										android:padding="12dp"
										android:textSize="12sp"
										android:enabled="false"
										android:id="@+id/tiePadding"
										android:text="not yet"/>

								</com.google.android.material.textfield.TextInputLayout>

								<com.google.android.material.button.MaterialButton
									android:layout_height="30dp"
									android:layout_width="70dp"
									android:padding="4dp"
									android:textSize="8dp"
									android:layout_marginLeft="4dp"
									android:layout_marginRight="4dp"
									style="?attr/materialButtonOutlinedStyle"
									android:text="@string/edit"
									android:id="@+id/btnPaddingsMarginsEdit"/>

							</LinearLayout>

						</ir.programmerplus.groupbox.GroupBoxLayout>

						<ir.programmerplus.groupbox.GroupBoxLayout
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							app:labelTextColor="?colorOnSurface"
							app:labelTextSize="10dp"
							app:borderColor="?colorOnSurface"
							android:layout_marginTop="12dp"
							app:borderCornerRadius="8dp"
							app:borderStrokeWidth="0.7dp"
							android:layoutDirection="ltr"
							app:labelText="background">

							<LinearLayout
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:padding="8dp"
								android:orientation="vertical">

								<LinearLayout
									android:layout_height="wrap_content"
									android:layout_width="match_parent"
									android:gravity="center"
									android:orientation="horizontal">

									<com.google.android.material.textfield.TextInputLayout
										android:layout_height="wrap_content"
										android:layout_width="match_parent"
										android:hint="tint"
										android:layout_margin="4dp"
										android:layout_weight="1.0"
										android:id="@+id/tilTint">

										<com.google.android.material.textfield.TextInputEditText
											android:layout_height="wrap_content"
											android:layout_width="match_parent"
											android:padding="12dp"
											android:textSize="12sp"
											android:enabled="false"
											android:id="@+id/tieTint"
											android:text="not yet"/>

									</com.google.android.material.textfield.TextInputLayout>

									<TextView
										android:layout_height="35dp"
										android:layout_width="35dp"
										android:gravity="center"
										android:textSize="12dp"
										android:layout_marginRight="4dp"
										android:text="Res"
										android:id="@+id/tvTint"
										android:textStyle="bold"/>

								</LinearLayout>

								<LinearLayout
									android:layout_height="wrap_content"
									android:layout_width="match_parent"
									android:gravity="center"
									android:orientation="horizontal">

									<com.google.android.material.textfield.TextInputLayout
										android:layout_height="wrap_content"
										android:layout_width="match_parent"
										android:hint="background"
										android:layout_margin="4dp"
										android:layout_weight="1.0"
										android:id="@+id/tilBackground">

										<com.google.android.material.textfield.TextInputEditText
											android:layout_height="wrap_content"
											android:layout_width="match_parent"
											android:padding="12dp"
											android:textSize="12sp"
											android:enabled="false"
											android:id="@+id/tieBackground"
											android:text="not yet"/>

									</com.google.android.material.textfield.TextInputLayout>

									<TextView
										android:layout_height="35dp"
										android:layout_width="35dp"
										android:gravity="center"
										android:textSize="12dp"
										android:layout_marginRight="4dp"
										android:text="Res"
										android:id="@+id/tvBackground"
										android:textStyle="bold"/>

								</LinearLayout>

								<LinearLayout
									android:layout_height="wrap_content"
									android:layout_width="match_parent"
									android:gravity="center"
									android:orientation="horizontal">

									<com.google.android.material.textfield.TextInputLayout
										android:layout_height="wrap_content"
										android:layout_width="match_parent"
										android:hint="backgroundTint"
										android:layout_margin="4dp"
										android:layout_weight="1.0"
										android:id="@+id/tilBackgroundTint">

										<com.google.android.material.textfield.TextInputEditText
											android:layout_height="wrap_content"
											android:layout_width="match_parent"
											android:padding="12dp"
											android:textSize="12sp"
											android:enabled="false"
											android:id="@+id/tieBackgroundTint"
											android:text="not yet"/>

									</com.google.android.material.textfield.TextInputLayout>

									<TextView
										android:layout_height="35dp"
										android:layout_width="35dp"
										android:gravity="center"
										android:textSize="12dp"
										android:layout_marginRight="4dp"
										android:text="Res"
										android:id="@+id/tvBackgroundTint"
										android:textStyle="bold"/>

								</LinearLayout>

							</LinearLayout>

						</ir.programmerplus.groupbox.GroupBoxLayout>

						<ir.programmerplus.groupbox.GroupBoxLayout
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							app:labelTextColor="?colorOnSurface"
							app:labelTextSize="10dp"
							app:borderColor="?colorOnSurface"
							android:layout_marginTop="12dp"
							app:borderCornerRadius="8dp"
							app:borderStrokeWidth="0.7dp"
							android:layoutDirection="ltr"
							app:labelText="android:visibility">

							<LinearLayout
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:padding="8dp"
								android:orientation="vertical">

								<com.google.android.material.button.MaterialButtonToggleGroup
									android:layout_height="40dp"
									android:layout_width="wrap_content"
									app:singleSelection="true"
									app:selectionRequired="false"
									android:id="@+id/toggleBtnVisibility">

									<com.google.android.material.button.MaterialButton
										android:layout_height="wrap_content"
										android:layout_width="wrap_content"
										app:strokeColor="?colorOnSurface"
										android:padding="4dp"
										android:textSize="12sp"
										style="?attr/materialButtonOutlinedStyle"
										android:id="@+id/btnVisible"
										android:text="VISIBLE"/>

									<com.google.android.material.button.MaterialButton
										android:layout_height="wrap_content"
										android:layout_width="wrap_content"
										app:strokeColor="?colorOnSurface"
										android:padding="4dp"
										android:textSize="12sp"
										style="?attr/materialButtonOutlinedStyle"
										android:id="@+id/btnInvisible"
										android:text="INVISIBLE"/>

									<com.google.android.material.button.MaterialButton
										android:layout_height="wrap_content"
										android:layout_width="wrap_content"
										app:strokeColor="?colorOnSurface"
										android:padding="4dp"
										android:textSize="12sp"
										style="?attr/materialButtonOutlinedStyle"
										android:id="@+id/btnGone"
										android:text="GONE"/>

								</com.google.android.material.button.MaterialButtonToggleGroup>

							</LinearLayout>

						</ir.programmerplus.groupbox.GroupBoxLayout>

						<ir.programmerplus.groupbox.GroupBoxLayout
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							app:labelTextColor="?colorOnSurface"
							app:labelTextSize="10dp"
							app:borderColor="?colorOnSurface"
							android:layout_marginTop="12dp"
							app:borderCornerRadius="8dp"
							app:borderStrokeWidth="0.7dp"
							android:layoutDirection="ltr"
							app:labelText="android:alpha">

							<LinearLayout
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:orientation="horizontal">

								<com.google.android.material.slider.RangeSlider
									android:layout_height="wrap_content"
									android:layout_width="match_parent"
									android:layout_marginEnd="4dp"
									android:padding="8dp"
									android:valueTo="1.0"
									android:valueFrom="0.0"
									android:stepSize="0.01"
									android:layout_marginStart="8dp"
									android:layout_weight="1.0"
									android:id="@+id/rangeSliderAlpha"/>

								<CheckBox
									android:layout_height="wrap_content"
									android:layout_width="wrap_content"
									android:layout_marginEnd="8dp"
									android:padding="8dp"
									android:layout_marginStart="4dp"
									android:id="@+id/cbAlpha"/>

							</LinearLayout>

						</ir.programmerplus.groupbox.GroupBoxLayout>

						<ir.programmerplus.groupbox.GroupBoxLayout
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							app:labelTextColor="?colorOnSurface"
							app:labelTextSize="10dp"
							app:borderColor="?colorOnSurface"
							android:layout_marginTop="12dp"
							app:borderCornerRadius="8dp"
							app:borderStrokeWidth="0.7dp"
							android:layoutDirection="ltr"
							app:labelText="android:(gravity|layout_gravity)">

							<LinearLayout
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:padding="8dp"
								android:orientation="horizontal">

								<com.google.android.material.button.MaterialButton
									android:layout_height="wrap_content"
									android:layout_width="wrap_content"
									android:layout_marginEnd="8dp"
									app:strokeColor="?colorOnSurface"
									android:padding="4dp"
									android:textSize="10sp"
									style="?attr/materialButtonOutlinedStyle"
									android:layout_marginStart="43dp"
									android:layout_weight="1.0"
									android:id="@+id/btnGravity"
									android:text="GRAVITY"/>

								<com.google.android.material.button.MaterialButton
									android:layout_height="wrap_content"
									android:layout_width="wrap_content"
									android:layout_marginEnd="43dp"
									app:strokeColor="?colorOnSurface"
									android:padding="4dp"
									android:textSize="10sp"
									style="?attr/materialButtonOutlinedStyle"
									android:layout_marginStart="8dp"
									android:layout_weight="1.0"
									android:id="@+id/btnLayoutGravity"
									android:text="LAYOUT GRAVITY"/>

							</LinearLayout>

						</ir.programmerplus.groupbox.GroupBoxLayout>

					</LinearLayout>

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:layout_margin="8dp"
				style="?attr/materialCardViewElevatedStyle">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:padding="4dp"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:gravity="center"
						android:padding="6dp"
						android:orientation="horizontal">

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:padding="4dp"
							android:textSize="12sp"
							android:typeface="monospace"
							android:layout_weight="1.0"
							android:text="@string/additional_attributs"
							android:textStyle="bold"/>

						<ImageView
							android:layout_height="25dp"
							android:layout_width="30dp"
							android:adjustViewBounds="true"
							android:src="@drawable/ic_add"
							android:id="@+id/icAddAttr"/>

					</LinearLayout>

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:padding="8dp"
						android:orientation="vertical"
						android:id="@+id/linAllAttributes"/>

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

		</LinearLayout>

	</androidx.core.widget.NestedScrollView>

</LinearLayout>
