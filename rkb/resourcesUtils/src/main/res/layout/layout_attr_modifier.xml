<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="horizontal"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:layout_marginTop="6dp">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="4dp"
             android:orientation="vertical"
             android:layout_weight="1.0">

            <HorizontalScrollView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:padding="1dp">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="16sp"
                     android:typeface="monospace"
                     android:text="ViewName"
                     android:textStyle="bold"
                     android:id="@+id/tvTitle" />

            </HorizontalScrollView>

            <HorizontalScrollView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:typeface="monospace"
                     android:text="View package"
                     android:id="@+id/tvSubTitle" />

            </HorizontalScrollView>

        </LinearLayout>

        <ImageView
             android:layout_height="35dp"
             android:layout_width="35dp"
             android:adjustViewBounds="true"
             android:src="@drawable/ic_add"
             android:padding="8dp"
             android:layout_margin="4dp"
             android:id="@+id/icAdd" />

        <ImageView
             android:layout_height="35dp"
             android:layout_width="35dp"
             android:adjustViewBounds="true"
             android:src="@drawable/ic_delete"
             android:padding="8dp"
             android:layout_margin="4dp"
             android:id="@+id/icDelete" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:padding="4dp"
         android:orientation="horizontal"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp">

        <View
             android:layout_height="1dp"
             android:layout_width="match_parent"
             android:padding="8dp"
             android:layout_weight="1.0" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:padding="8dp"
             android:layout_margin="2dp"
             android:textSize="10sp"
             android:typeface="monospace"
             android:text="Copy"
             android:id="@+id/tvCopy" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:padding="8dp"
             android:layout_margin="2dp"
             android:textSize="10sp"
             android:typeface="monospace"
             android:text="Past"
             android:id="@+id/tvPast" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:hint="android:id"
         android:layout_margin="12dp"
         android:id="@+id/tilId">

        <com.google.android.material.textfield.TextInputEditText
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:padding="12dp"
             android:textSize="12sp"
             android:id="@+id/editId" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.core.widget.NestedScrollView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
         android:id="@+id/nested_scroll_view">

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:padding="4dp"
             android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp"
                 style="?attr/materialCardViewElevatedStyle"
                 android:id="@+id/cardLayout">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="4dp"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:gravity="center"
                         android:padding="6dp"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:padding="4dp"
                             android:textSize="12sp"
                             android:typeface="monospace"
                             android:layout_weight="1.0"
                             android:text="Layout"
                             android:textStyle="bold" />

                        <ImageView
                             android:layout_height="25dp"
                             android:layout_width="30dp"
                             android:src="@drawable/ic_chevron_down"
                             android:adjustViewBounds="true"
                             android:id="@+id/icLayout" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:orientation="vertical"
                         android:id="@+id/linLayout">

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp"
                 style="?attr/materialCardViewElevatedStyle"
                 android:id="@+id/cardDeclaredAttributes">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="4dp"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:gravity="center"
                         android:padding="6dp"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:padding="4dp"
                             android:textSize="12sp"
                             android:typeface="monospace"
                             android:layout_weight="1.0"
                             android:text="@string/declared_attributes"
                             android:textStyle="bold" />

                        <ImageView
                             android:layout_height="25dp"
                             android:layout_width="30dp"
                             android:src="@drawable/ic_chevron_down"
                             android:adjustViewBounds="true"
                             android:id="@+id/icDeclared" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:orientation="vertical"
                         android:id="@+id/linDeclaredAttributes">

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp"
                 style="?attr/materialCardViewElevatedStyle"
                 android:id="@+id/cardAllAttributes">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="4dp"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:gravity="center"
                         android:padding="6dp"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:padding="4dp"
                             android:textSize="12sp"
                             android:typeface="monospace"
                             android:layout_weight="1.0"
                             android:text="@string/all_attributes"
                             android:textStyle="bold" />

                        <ImageView
                             android:layout_height="25dp"
                             android:layout_width="30dp"
                             android:adjustViewBounds="true"
                             android:src="@drawable/ic_chevron_down"
                             android:id="@+id/icAll" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:orientation="vertical"
                         android:id="@+id/linAllAttributes">

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>